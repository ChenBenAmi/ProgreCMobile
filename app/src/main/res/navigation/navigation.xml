<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
        app:startDestination="@id/splashScreenFragment">

    <fragment android:id="@+id/loginFragment" android:name="com.example.progresee.views.LoginFragment"
              android:label="fragment_login" tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_classroomFragment" app:destination="@id/classroomFragment"/>
    </fragment>
    <fragment android:id="@+id/helpFragment" android:name="com.example.progresee.views.HelpFragment"
              android:label="fragment_help" tools:layout="@layout/fragment_help"/>
    <fragment android:id="@+id/settingFragment" android:name="com.example.progresee.views.SettingFragment"
              android:label="fragment_setting" tools:layout="@layout/fragment_setting"/>
    <fragment android:id="@+id/classroomFragment" android:name="com.example.progresee.views.ClassroomFragment"
              android:label="fragment_classroom" tools:layout="@layout/fragment_classroom">
        <action
                android:id="@+id/action_classroomFragment_to_createClassroomFragment"
                app:destination="@id/createClassroomFragment" />
        <action
                android:id="@+id/action_classroomFragment_to_taskFragment"
                app:destination="@id/taskFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/splashScreenFragment"
            android:name="com.example.progresee.views.SplashScreenFragment"
            android:label="SplashScreenFragment" >
        <action
                android:id="@+id/action_splashScreenFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_right"
                app:popUpTo="@+id/navigation"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/createClassroomFragment"
            android:name="com.example.progresee.views.CreateClassroomFragment"
            android:label="CreateClassroomFragment" />
    <fragment
            android:id="@+id/taskFragment"
            android:name="com.example.progresee.views.TaskFragment"
            android:label="fragment_task"
            tools:layout="@layout/fragment_task" />
</navigation>